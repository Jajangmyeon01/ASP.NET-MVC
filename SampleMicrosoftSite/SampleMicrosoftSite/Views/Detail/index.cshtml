@model SampleMicrosoftSite.Models.DeveloperToolsModel
<div class="row">
    <div class="col-12">
        <nav>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Home</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index","DeveloperTools")">Developer Tools</a></li>
                <li class="breadcrumb-item active">Details</li> 
            </ul>
        </nav>
    </div>
</div>
<div class="row">
    @if(Model != null)
            {
                <div class="col-4">
                    <img src="@Url.Content($"~/wwwroot/images/MicrosoftTools/{Model.ImageUrl}")" style="max-height: 300px" alt="@Model.Name" />
                </div>
                <div class="col-8">
                    <p class="lead">
                        @Html.Raw(Model.Description)
                    </p>
                </div>
            }
else
            {
                <p>DeveloperTools not Found!</p>
            }
</div>